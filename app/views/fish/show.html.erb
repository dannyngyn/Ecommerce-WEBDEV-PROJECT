<section id ="fish_section">
  <h2 id = "underline_fish_name"><%= @fish['fish_name'] %></h2>
  <section id ="fish_info">
    <p>Size: <%= @fish['size'] %></p>
    <p>Stock: <%= @fish['stock'] %></p>
    <p>Cost: $<%= @fish['fish_cost'] %></p>
    <p>Raised Type: <%= @fish.raised_type['raised_type'] %></p>
    <p>Water Type: <%= @fish.water['water_type'] %></p>
    <p><a href = "/fish/index">Go Back to Fish</a></p>

    <div id = "fish_cart_form">
      <%= form_with url: cart_index_path, method: :post do %>
        <%= hidden_field_tag(:id, @fish.id) %>
        <%= button_tag "Add to cart" %>
      <% end %>
    </div>

    <div id = "fish_buy_form">
      <%= form_with url: checkout_create_path, remote: true do %>
        <%= hidden_field_tag(:fish_id, @fish.id) %>
        <%= button_tag "Buy Now"%>
      <% end %>
    </div>

    <%if @fish.image.present? %>
      <div id = "fish_image">
        <%= image_tag(@fish.image, width: 200) %>
      </div>
    <% end %>
  </section>
</section>


