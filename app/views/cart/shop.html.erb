<% if cart.present? %>
  <% cart.each do |fish| %>
    <section id = "fish_section">
      <p><%= fish.fish_name %></p>
      <p>Size: <%= fish.size %></p>
      <%if fish.image.present? %>
        <div id = "fish_image">
          <%= image_tag(fish.image, width:100) %>
        </div>
      <% end %>
      <%= button_to 'REMOVE', cart_path(fish), method: :delete %>
    </section>
  <% end %>
<% else %>
  <p>
    No items in your cart.
  </p>
<% end %>

<% if cart.present? %>
  <%= button_to 'Proceed to Check Out', '/checkout/show', method: :get %>
<% end %>

<% if flash[:notice] %>
  <p>
    <%= flash[:notice]%>
  </p>
<% end %>
